<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.saladbowlcompanion.ui.GameActivity"
    android:background="@color/material_grey_850"
    android:id="@+id/gameActivityBackground">

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/timerTextView"
        android:layout_below="@+id/roundRulesTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textSize="40sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM NAME"
        android:id="@+id/teamNameTextView"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTextIcons" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round:"
        android:id="@+id/roundTextView"
        android:textSize="20dp"
        android:textColor="@color/colorTextIcons"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/teamNameTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round Rules"
        android:id="@+id/roundRulesTextView"
        android:textSize="20dp"
        android:textColor="@color/colorTextIcons"
        android:layout_below="@+id/roundTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WORD TO GUESS"
        android:id="@+id/wordTextView"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTextIcons"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct!"
        android:id="@+id/correctButton"
        android:textSize="24sp"
        android:padding="15dp"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/wordTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass"
        android:id="@+id/passButton"
        android:textSize="24sp"
        android:padding="15dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/correctButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
