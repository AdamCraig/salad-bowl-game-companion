<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.saladbowlcompanion.ui.QuickModeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/AButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/BButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_alignTop="@+id/AButton"
        android:layout_toRightOf="@+id/AButton"
        android:layout_toEndOf="@+id/AButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/CButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_alignTop="@+id/BButton"
        android:layout_toRightOf="@+id/BButton"
        android:layout_toEndOf="@+id/BButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/DButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_alignTop="@+id/CButton"
        android:layout_toRightOf="@+id/CButton"
        android:layout_toEndOf="@+id/CButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:id="@+id/EButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/AButton"
        android:layout_toLeftOf="@+id/BButton"
        android:layout_toStartOf="@+id/BButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/FButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/AButton"
        android:layout_toLeftOf="@+id/CButton"
        android:layout_toStartOf="@+id/CButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:id="@+id/GButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/BButton"
        android:layout_toLeftOf="@+id/DButton"
        android:layout_toStartOf="@+id/DButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:id="@+id/HButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/CButton"
        android:layout_alignRight="@+id/DButton"
        android:layout_alignEnd="@+id/DButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I"
        android:id="@+id/IButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/EButton"
        android:layout_toLeftOf="@+id/FButton"
        android:layout_toStartOf="@+id/FButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/LButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_alignTop="@+id/IButton"
        android:layout_toRightOf="@+id/IButton"
        android:layout_toEndOf="@+id/IButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/MButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_alignTop="@+id/LButton"
        android:layout_toRightOf="@+id/LButton"
        android:layout_toEndOf="@+id/LButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N"
        android:id="@+id/NButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_alignTop="@+id/MButton"
        android:layout_alignRight="@+id/HButton"
        android:layout_alignEnd="@+id/HButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:id="@+id/OButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/IButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P"
        android:id="@+id/PButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/IButton"
        android:layout_toRightOf="@+id/IButton"
        android:layout_toEndOf="@+id/IButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/RButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/LButton"
        android:layout_toRightOf="@+id/PButton"
        android:layout_toEndOf="@+id/PButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:id="@+id/SButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/MButton"
        android:layout_toRightOf="@+id/MButton"
        android:layout_toEndOf="@+id/MButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:id="@+id/TButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/OButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U"
        android:id="@+id/UButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_alignTop="@+id/TButton"
        android:layout_toRightOf="@+id/TButton"
        android:layout_toEndOf="@+id/TButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V"
        android:id="@+id/VButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/PButton"
        android:layout_toRightOf="@+id/PButton"
        android:layout_toEndOf="@+id/PButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:id="@+id/WButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_alignTop="@+id/VButton"
        android:layout_alignRight="@+id/SButton"
        android:layout_alignEnd="@+id/SButton" />

</RelativeLayout>
