<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.saladbowlcompanion.ui.SetUpActivity"
    android:background="@color/material_grey_850">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="How Many Teams of 2?"
        android:id="@+id/teamsTextView"
        android:textSize="35dp"
        android:textColor="@color/material_deep_teal_500"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textIsSelectable="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:id="@+id/twoTeamButton"
        android:background="@drawable/circle_button"
        android:textSize="30dp"
        android:layout_alignTop="@+id/threeTeamButton"
        android:layout_alignLeft="@+id/fourTeamButton"
        android:layout_alignStart="@+id/fourTeamButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:id="@+id/threeTeamButton"
        android:background="@drawable/circle_button"
        android:textSize="30dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/teamsTextView"
        android:layout_alignLeft="@+id/fiveTeamButton"
        android:layout_alignStart="@+id/fiveTeamButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:id="@+id/fourTeamButton"
        android:background="@drawable/circle_button"
        android:textSize="30dp"
        android:layout_above="@+id/sixTeamButton"
        android:layout_toLeftOf="@+id/sixTeamButton"
        android:layout_toStartOf="@+id/sixTeamButton"
        android:layout_marginBottom="31dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:id="@+id/fiveTeamButton"
        android:background="@drawable/circle_button"
        android:textSize="30dp"
        android:layout_alignTop="@+id/fourTeamButton"
        android:layout_toRightOf="@+id/sixTeamButton"
        android:layout_toEndOf="@+id/sixTeamButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:id="@+id/sixTeamButton"
        android:background="@drawable/circle_button"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

</RelativeLayout>
