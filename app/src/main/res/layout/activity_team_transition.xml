<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.TeamTransitionActivity"
    android:id="@+id/teamTransitionBackground">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team Y, get ready!"
        android:id="@+id/getReadyTextView"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/scoreClosingTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team X got"
        android:id="@+id/scoreTitleTextView"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/roundNumberTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8"
        android:id="@+id/scoreTextView"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/scoreTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="point(s) that turn!"
        android:id="@+id/scoreClosingTextView"
        android:layout_below="@+id/scoreTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Team Y&apos;s Turn"
        android:id="@+id/nextTurnButton"
        android:textSize="24sp"
        android:padding="15dp"
        android:background="@drawable/round_button"
        android:layout_below="@+id/newRoundStartTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Round 1"
        android:id="@+id/roundNumberTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Round 2 Is About To Start!"
        android:id="@+id/newRoundStartTextView"
        android:layout_below="@+id/getReadyTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:drawableLeft="@android:drawable/ic_dialog_alert"
        android:drawableTint="@android:color/holo_orange_light"
        android:drawablePadding="10dp"
        android:visibility="invisible" />
</RelativeLayout>
